{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "es2016",
      "dom"
    ]
  }
}
